      	 <div class="card h-100">
	      	 <div class="item-list-card"><a href="#"><img class="card-img-top" src=<%= image_url (item.image)%> /></a></div>
        	 <div class="card-body">
        	 	<h4 class="card-title">
        	 		<a href="#"><%= item.id %></a>
      	 		</h4>
      	 		<p class="card-text"><%= item.description %></p>
    	 		</div>
  	 		</div>
	 		</div>
		 <% end %>
    </div>
    <!-- /.row End of Latest Listing -->

    <hr>

